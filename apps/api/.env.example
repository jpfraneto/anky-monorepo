# Server Configuration
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/anky

# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# IPFS/Pinata (Optional - for minting functionality)
PINATA_JWT=your_pinata_jwt_here

# Privy Authentication (Required for protected endpoints)
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Frontend URL (for CORS in production)
FRONTEND_URL=https://anky.app

# Base Chain (for agent payment verification)
BASE_RPC_URL=https://mainnet.base.org
TREASURY_ADDRESS=0x_your_treasury_address_here
ANKY_TOKEN_ADDRESS=0x_your_anky_token_address_here

# Polar.sh (for human subscriptions)
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here
POLAR_PRODUCT_ID=your_polar_product_id_here
